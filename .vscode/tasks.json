{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake-gcc",
            "command": "cmake",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "args": [
                ".."
            ],
        },
        {
            "label": "make",
            "command": "make",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "dependsOn": "cmake-gcc"
        },
        {
            "label": "build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": "make",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": false
            }
        },
        {
            "label": "cmake-clang+ninja",
            "command": "cmake",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build.ninja"
            },
            "args": [
                "..",
                "-DCMAKE_C_COMPILER=clang",
                "-DCMAKE_CXX_COMPILER=clang++",
                "-G",
                "Ninja"
            ],
        },
        {
            "label": "ninja",
            "command": "ninja",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build.ninja"
            },
            "args":[
                "-v"
            ],
            "dependsOn": "cmake-clang+ninja"
        },
        {
            "label": "build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build.ninja"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "ninja",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false
            }
        },
        ]
}